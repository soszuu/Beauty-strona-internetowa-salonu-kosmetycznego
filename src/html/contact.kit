<body>
    <!-- @include 'nav.kit' -->
    <!-- @include 'hero.kit' -->
    <section class="contact">
        <div class="contact-form">
            <div class="contact-form-title">
                <h3 class="contact-form-title-text">Formularz kontaktowy</h3>
            </div>
            <div class="contact-form-top">
                <label for="name">Imię:</label>
                <input type="text" id="name">
                <label for="email">E-mail:</label>
                <input type="email" id="email">
            </div>
            <label for="text">Wiadomość:</label>
            <textarea id="text"></textarea>
            <button class="contact-form-btn">Wyślij wiadomość</button>
        </div>
        <div class="contact-map">
            <div class="contact-map-title">
                <p class="contact-map-title-text">Nasza lokalizacja</p>
            </div>
            <div class="contact-map-google">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3107.7907673017007!2d19.936669355536516!3d50.06894191528825!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47165b05c9419cf3%3A0x6a4535aa30b18c91!2zU8WCb3dpYcWEc2thIDQ2LCAzMS0xNDEgS3Jha8Ozdw!5e1!3m2!1spl!2spl!4v1719828647593!5m2!1spl!2spl" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
        </div>
    </section>
    <!-- @include 'footer.kit' -->

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
    <script src="./dist/js/main.min.js"></script>
</body>

</html>